<div class="container">

<div class="row">
    <h2>登録情報</h2>
  </div>

  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-3"></div>
    <div class="col-lg-2"></div>
    <div class="col-lg-2"></div>
    <div class="col-lg-1"></div>
    <div class="col-lg-2"></div>
  </div>

  <div id="reg" class="row">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>登録氏名</th>
          <th>登録住所</th>
          <th>電話番号</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th><%= current_user.last_name + current_user.first_name %></th>
          <th><%= @user.address %></th>
          <th><%= @user.telephone_number %></th>
          <th></th>
          <th><%= link_to "登録情報を編集する", edit_user_path(current_user) %></th>
      </tr>
      </tbody>
    </table>
  </div>
  <h4>投稿した商品</h4>
  <div class="row">
    <% @nails.each do |nail| %>
    <div class="post">
      <div><%= attachment_image_tag nail, :image,:fill, 100, 100, format: "jpeg" %></div>
      <div><%= link_to nail.name, nail_path(nail) %></div>
      <div><%= nail.price %>円</div>
    </div>
    <% end %>
  </div>
  <h4>お気に入り商品</h4>
    <div id="favorite-box" class="row">
      <% @favorites.each do |favorite| %>
        <div id="favorite">
          <%= attachment_image_tag favorite.nail, :image,:fill, 100, 100, format: "jpeg" %>
          <div><%= link_to favorite.nail.name, users_nail_path(favorite.nail) %></div>
          <div><%= favorite.item.price %>円</div>
        </div>
      <% end %>
    </div>
</div>