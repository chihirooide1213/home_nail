<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Comments</h1>

  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Nail</th>
        <th>Nail</th>
        <th>Nail</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @comments.each do |comment| %>
        <tr>
          <td><%= comment.user_id %></td>
          <td><%= comment.nail_id %></td>
          <td><%= comment.rate %></td>
          <td><%= comment.content %></td>
          <td><%= link_to 'Show', nail_comment_path(comment.id,comment.nail.id) %></td>
          <td><%= link_to 'Edit', edit_nail_comment_path(comment.id,comment.nail.id) %></td>
          <td><%= link_to 'Destroy', nail_comment_path(comment.id, comment.nail.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

<%= link_to 'New Comment', new_nail_comment_path(@nail) %>
</div>